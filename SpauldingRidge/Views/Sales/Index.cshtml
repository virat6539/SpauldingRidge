@model IEnumerable<SpauldingRidge.Models.SalesData>

<div class="container scrollable-content">
    <div class="card mt-5">
        <div class="card-header">
            <h2 class="card-title">Sales Forecasting</h2>
        </div>
        <div class="card-body">
            <form method="post" class="form-horizontal">
                <div class="form-group row mb-2">
                    <label for="year" class="col-sm-2 col-form-label">Year</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="year" name="year" value="@ViewBag.Year" placeholder="Enter year">
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label for="percentage" class="col-sm-2 col-form-label">Global Percentage Increase</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="percentage" name="percentage" value="@ViewBag.Percentage" placeholder="Enter percentage increase">
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col-12 d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">Get Sales</button>
                    </div>
                </div>
            </form>
            @if (ViewBag.TotalSales != null)
            {
                <div class="mt-4">
                    <h3>Total Sales: @ViewBag.TotalSales</h3>
                    <h3>Total Incremented Sales: @ViewBag.TotalIncrementedSales</h3>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>State</th>
                                <th>Sales</th>
                                <th>Incremented Sales</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.State</td>
                                    <td>@item.Sales</td>
                                    <td>@item.IncrementedSales</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-end mt-3">
                        <form method="get" asp-action="DownloadCsv" class="mr-2">
                            <input type="hidden" name="year" value="@ViewBag.Year" />
                            <input type="hidden" name="percentage" value="@ViewBag.Percentage" />
                            <button type="submit" class="btn btn-secondary">Download CSV</button>
                        </form>
                        <a class="btn btn-info" asp-action="Chart" asp-route-year="@ViewBag.Year" asp-route-percentage="@ViewBag.Percentage">View Chart</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .scrollable-content {
        max-height: 80vh; /* Adjust the max height as needed */
        overflow-y: auto;
        padding: 20px;
        box-sizing: border-box;
    }

    .mr-2 {
        margin-right: 0.5rem;
    }

    .mb-2 {
        margin-bottom: 0.5rem;
    }
</style>
